program Main;{I-}							{ disable automatic initialization }	uses		Traps, QDOffscreen, Globals, Graphics, Gestalt, Windows, Dialogs, Menus, Events;{----------------------------}begin	InitGraf(@thePort);	InitFonts;	FlushEvents(everyEvent, 0);	InitWindows;	InitMenus;	InitDialogs(nil);	InitCursor;{ initialize my resources }	ColorQuickdrawAvailable;	SetUpMenus;	SetUpScreen;	SetupWindow;	DrawScreen;	gameGlobals.doneFlag := false;	repeat		SystemTask;		if GetNextEvent(everyEvent, gameGlobals.whichEvent) then			HandleEvent(gameGlobals.whichEvent)		else			if FindWindow(gameGlobals.whichEvent.where, gameGlobals.whichWindow) = inContent then				ObscureCursor;		with gameGlobals do			begin				avgDrawCycles := TickCount - lastDrawTick;			end;		if TickCount - gameGlobals.lastDrawTick > 1 then			DrawScreen;	until gameGlobals.doneFlag;end.